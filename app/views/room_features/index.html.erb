<p id="notice"><%= notice %></p>

<h1>Listing Room Features</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_features.each do |room_feature| %>
      <tr>
        <td><%= room_feature.name %></td>
        <td><%= link_to 'Show', room_feature %></td>
        <td><%= link_to 'Edit', edit_room_feature_path(room_feature) %></td>
        <td><%= link_to 'Destroy', room_feature, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

