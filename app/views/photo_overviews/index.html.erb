<p id="notice"><%= notice %></p>

<h1>Listing Photo Overviews</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photo_overviews.each do |photo_overview| %>
      <tr>
        <td><%= image_tag photo_overview.image.url(:small) %></td>
        <td><%= link_to 'Show', hotel_overview_photo_overview_path(@hotel_overview, photo_overview) %></td>
        <td><%= link_to 'Edit', edit_hotel_overview_photo_overview_path(@hotel_overview, photo_overview) %></td>
        <td><%= link_to 'Destroy', hotel_overview_photo_overview_path(@hotel_overview, photo_overview), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Photo overview', new_hotel_overview_photo_overview_path %>|
<%= link_to 'Back', hotel_overview_path(@hotel_overview) %>