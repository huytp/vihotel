section#main-slider.no-margin
  .carousel.slide
    .carousel-inner
      .item.active.item-slide-1
        .container
          .row.slide-margin
            .col-sm-12
              .vi-logo
                = image_tag 'logo-white.png', class: "logo"
            .col-sm-12
              nav.navbar
                .navbar-header
                  button.navbar-toggle.collapsed aria-expanded="false" data-target="#vi-navbar-collapse-2" data-toggle="collapse" type="button"
